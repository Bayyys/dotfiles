# ----- Local Setting -----
# This file is sourced from ~/.zshrc and is meant for machine-specific settings.

{{- if eq .chezmoi.os "darwin" }}
# ----- VsCode -----
function code {
    if [[ $# = 0 ]]
    then
        open -a "Visual Studio Code"
    else
        local argPath="$1"
        [[ $1 = /* ]] && argPath="$1" || argPath="$PWD/${1#./}"
        open -a "Visual Studio Code" "$argPath"
    fi
}
{{- end }}
