zmodule Aloxaf/fzf-tab # 将 zsh shell 补全的结果 pipe 入 fzf 中显示和选择
zmodule agkozak/zsh-z # 使用 z 进行跳转
zmodule hlissner/zsh-autopair	# 自动补全括号
zmodule supercrabtree/k	# 使目录列表具有可读性
zmodule jeffreytse/zsh-vi-mode	# 使shell具有vim模式
zmodule wookayin/fzf-fasd	
